namespace nuraft_mesg;

enum ResultCode:uint32 {
    OK                          = 0,
    CANCELLED                   = 1,
    TIMEOUT                     = 2,
    NOT_LEADER                  = 3,
    BAD_REQUEST                 = 4,
    SERVER_ALREADY_EXISTS       = 5,
    CONFIG_CHANGING             = 6,
    SERVER_IS_JOINING           = 7,
    SERVER_NOT_FOUND            = 8,
    CANNOT_REMOVE_LEADER        = 9,
    SERVER_IS_LEAVING           = 10,
    TERM_MISMATCH               = 11,

    RESULT_NOT_EXIST_YET        = 10000,

    FAILED                      = 32768,
}

enum LogType:int16 {
  UNKNOWN       = 0,
  APP           = 1,
  CONFIG        = 2,
  CLUSTER       = 3,
  PACK          = 4,
  SNAPSYNC      = 5,
  CUSTOM        = 999,
}

table LogEntry {
  term:long;
  type:LogType;
  buffer: [ubyte];
  timestamp:uint64;
}

table Request {
  last_log_term:uint64;
  last_log_index:uint64;
  commit_index:uint64;
  logs:[LogEntry];
}

table Response {
  next_index:uint64;
  accepted:bool;
  dest_addr:string;
  result_code:ResultCode;
  context:[ubyte];
}
